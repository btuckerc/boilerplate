# System aliases
alias ls='ls --color=auto'
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# System maintenance
alias update="sudo apt update && sudo apt upgrade -y"
alias clean="sudo apt autoremove -y && sudo apt autoclean"

# Git aliases
alias gst="git status"
alias gpl="git pull"
alias gps="git push"
alias gcm="git commit -m"
alias gs='git status'
alias ga='git add'
alias gb='git branch'
alias gc='git commit'
alias gd='git diff'
alias gl='git --no-pager log --oneline --decorate --all --graph'

# Python virtual environment
alias venv_activate="source venv/bin/activate"
alias vde="deactivate"

# Editor aliases
alias vim="nvim"
alias practice="nvim +VimBeGood"
alias v.="nvim ."

# Git tools
alias lg="lazygit"

# MySQL aliases
alias sql_start="sudo /etc/init.d/mysql start"
alias sql_stop="sudo /etc/init.d/mysql stop"
alias sql="mysql --user='root' --password=''"

# Fun/Utility aliases
alias rot13="tr 'A-Za-z' 'N-ZA-Mn-za-m'"
alias dunnet="emacs -batch -l dunnet" 

# Obsidian/notetaking
alias oo="cd '/Users/tucker/Documents/00-Vault/00 - Inbox/'"
alias dn="nvim +ObsidianToday"
