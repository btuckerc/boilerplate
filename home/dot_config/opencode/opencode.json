{
  "$schema": "https://opencode.ai/config.json",
  "instructions": ["~/.config/opencode/AGENTS.md"],
  "permission": {
    "edit": "ask",
    "bash": "ask"
  },
  "tools": {
    "read": true,
    "grep": true,
    "glob": true,
    "list": true,
    "edit": true,
    "write": true,
    "bash": true,
    "todowrite": true,
    "todoread": true,
    "webfetch": true
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest"],
      "enabled": true
    }
  }
}
