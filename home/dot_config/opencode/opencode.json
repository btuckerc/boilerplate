{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "read": "allow",
    "edit": "allow",
    "bash": "ask",
    "external_directory": "ask",
    "task": "ask",
    "glob": "allow",
    "grep": "allow",
    "list": "allow",
    "lsp": "allow"
  },
  "provider": {
    "openrouter": {
      "models": {
        "moonshotai/kimi-k2.5": {
          "name": "Kimi K2.5 (via Fireworks AI)",
          "limit": {
            "context": 262144,
            "output": 16384
          },
          "parameters": {
            "temperature": 0.1,
            "top_p": 0.95,
            "reasoning": {
              "enabled": true,
              "include_details": true
            }
          },
          "options": {
            "provider": {
              "order": ["together", "moonshotai"],
              "allow_fallbacks": false
            }
          }
        },
        "anthropic/claude-opus-4.6": {
          "name": "Claude Opus 4.6 (via OpenRouter)",
          "limit": {
            "context": 200000,
            "output": 65536
          }
        }
      }
    }
  },
  "model": "openrouter/moonshotai/kimi-k2.5"
}
