{
  "$schema": "https://opencode.ai/schema.json",

  // Global OpenCode configuration
  // Managed by chezmoi - https://github.com/btuckerc/boilerplate
  // Project-specific settings can override these in project's opencode.json

  // Instructions/Rules - global rules that apply to all sessions
  "instructions": [
    "~/.config/opencode/AGENTS.md"
  ],

  // Provider configuration - you'll configure API keys via `opencode auth login`
  // OpenCode supports 75+ providers including Anthropic, OpenAI, Google, etc.
  "provider": {
    // Providers will be configured via CLI authentication
    // Example for custom endpoints:
    // "anthropic": {
    //   "baseURL": "https://api.anthropic.com"
    // }
  },

  // Model configuration - specify your preferred models
  // Uncomment and customize after authentication
  // "model": "anthropic/claude-sonnet-4.5",
  // "small_model": "anthropic/claude-haiku-4",

  // Tools configuration - manage which tools the LLM can use
  // "tools": {
  //   "enabled": true
  // },

  // Custom commands for repetitive tasks
  // "command": {
  //   "custom-command-name": {
  //     "description": "Description of what this command does",
  //     "prompt": "The prompt to send to the LLM"
  //   }
  // },

  // Keybind customization (optional)
  // "keybinds": {
  //   // Custom keybindings
  // }
}
