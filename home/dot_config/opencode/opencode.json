{
  "$schema": "https://opencode.ai/config.json",
  "instructions": ["~/.config/opencode/AGENTS.md"],
  "permission": {
    "edit": "ask",
    "bash": "ask"
  },
  "tools": {
    "read": true,
    "grep": true,
    "glob": true,
    "list": true,
    "patch": true,
    "todowrite": true,
    "todoread": true,
    "webfetch": true
  },
  "agent": {
    "plan": { "from": "~/.config/opencode/agent/plan.md" },
    "build": { "from": "~/.config/opencode/agent/build.md" },
    "review": { "from": "~/.config/opencode/agent/review.md" },
    "docs": { "from": "~/.config/opencode/agent/docs.md" },
    "e2e": { "from": "~/.config/opencode/agent/e2e.md" }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest"],
      "enabled": true
    }
  }
}
